/**
 * @fileoverview Firestore Security Rules for Supermoda Raffles.
 *
 * Core Philosophy:
 * This ruleset implements a role-based access control model with dedicated collections for data and admin roles.
 *
 * Data Structure:
 * - `/coupons/{couponId}`: Stores individual raffle coupon data.
 * - `/roles_admin/{adminUserId}`: Presence of a document grants admin privileges to the corresponding user.
 * - `/settings/raffle`: Stores application settings, like value per coupon.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Grants public read access to coupons and restricts write access to admins.
     * The create rule allows public write but validates the timestamp.
     * @path /coupons/{couponId}
     */
    match /coupons/{couponId} {
      allow get, list: if true;
      allow create: if request.resource.data.purchaseDate is timestamp;
      allow update, delete: if isAdmin();
    }
    
    /**
     * @description Enables public write access for coupon generation counter.
     * This is required for the transaction that generates new coupon numbers.
     * @path /counters/{counterId}
     */
    match /counters/{counterId} {
        allow read, write: if true;
    }
    
    /**
     * @description Secures admin role documents.
     * - A user can read their own role document.
     * - A user can create their own role document if it includes role: 'admin'.
     * - Admins can list all roles.
     * - Roles cannot be updated or deleted by clients.
     * @path /roles_admin/{adminUserId}
     */
    match /roles_admin/{adminUserId} {
      allow get: if isSignedIn() && request.auth.uid == adminUserId;
      allow list: if isAdmin();
      allow create: if isSignedIn() 
                    && request.auth.uid == adminUserId
                    && request.resource.data.role == 'admin';
      allow update, delete: if false; // Roles should not be updatable or deletable by clients.
    }
    
    /**
     * @description Secures application settings. Public can read, only admins can write.
     * @path /settings/{settingId}
     */
    match /settings/{settingId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    /**
     * @description Secures winner history. Public can read, only admins can create.
     * @path /winners/{winnerId}
     */
    match /winners/{winnerId} {
        allow get, list: if true;
        allow create: if isAdmin();
        allow update, delete: if false;
    }

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
  }
}
